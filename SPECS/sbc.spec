Summary:	Digital audio encoder and decoder used to transfer data to Bluetooth audio output 
Name:		sbc
Version:	1.3
Release:	1
License:	GPL
URL:		http://www.kernel.org/pub/linux/bluetooth/
Group:		System
Vendor:		Bildanet
Distribution:	Octothorpe
Source0:	%{name}-%{version}.tar.xz

%description

%prep
%setup -q

%build
./configure --prefix=%{_prefix} \
	    --disable-static    \
	    --disable-tester 
make

%install
[ %{buildroot} != "/"] && rm -rf %{buildroot}/*

make DESTDIR=%{buildroot} install

%{_fixperms} %{buildroot}/*

%check

%post

%clean
rm -rf %{buildroot}/*

%files
%defattr(-,root,root)
